<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Mood">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="114dp"
        android:text="What's your MOOD?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/Happy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="29dp"
        android:background="@color/black"
        android:onClick="Happy"
        android:text="Happy"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/Romantic"
        app:layout_constraintEnd_toStartOf="@+id/Sad"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Sad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="31dp"
        android:background="@color/black"
        android:onClick="Sad"
        android:text="Sad"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/Energetic"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Romantic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="32dp"
        android:background="@color/black"
        android:onClick="Romantic"
        android:text="Romantic"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/Relaxed"
        app:layout_constraintEnd_toStartOf="@+id/Energetic"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Energetic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="30dp"
        android:background="@color/black"
        android:onClick="Energetic"
        android:text="Energetic"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/Indifferent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Relaxed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="294dp"
        android:background="@color/black"
        android:onClick="Relaxed"
        android:text="Relaxed"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Indifferent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Indifferent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="294dp"
        android:background="@color/black"
        android:onClick="Indifferent"
        android:text="Indifferent"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="31dp"
        android:text="Wanna go Spiritual?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="101dp"
        android:background="@color/black"
        android:onClick="spiritual"
        android:text="Go spiritual!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>